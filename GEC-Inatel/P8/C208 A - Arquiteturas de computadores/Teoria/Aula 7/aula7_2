.data 

frase: .asciiz "Entre com sua idade: "
frase1: .asciiz "Você é maior de idade!"
frase2: .asciiz "Você é menor de idade!"

.text

li $v0, 4 #seta o serviço print string
la $a0,frase #indica onde esta a string a ser impressa 
syscall

li $v0,5 # seta o serviço de READ INT
syscall

add $t1,$v0,$0 # move a idade digitada para $t1

bge $t1,18,maior
       li $v0,4 # mostra a frase Menor de idade
       la $a0,frase2
       syscall
       
       j fim

maior: li $v0,4 # mostra a frase Maior de idade 
       la $a0,frase1
       syscall
       
 fim: li $v0,10
      syscall